
@model List<CasoEstudio_CarlosRamirezReyes.Models.Post>


<!DOCTYPE html>
<html lang="{{ str_replace('_', '-', app()->getLocale()) }}">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="csrf-token" content="{{ csrf_token() }}">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


    <title>Lista Publicaciones</title>

        <style>
            body {
                font-family: Arial, sans-serif;
                background-image: url('/images/bg-home.png');
                background-size: cover;
                background-position: center center;
                margin: 0;
                padding: 0x;
                min-height: 100vh;
            }

            .publi-container {
                background-color: rgba(255, 255, 255, 0.9);
                border-radius: 8px;
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
                padding: 45px;
                width: auto;
                text-align: left;
            }
        </style>

    </head>

    <body>
        <div class="publi-container">
        <form asp-action="Crear" method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Contenido</th>
                        <th>Fecha de Publicación</th>
                        <th>Usuario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model)
                    {
                        <tr>
                            <td>@post.Titulo</td>
                            <td>@post.Contenido</td>
                            <td>@post.FechaPublicacion</td>
                            <td>@post.UsuarioID</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Post" asp-action="Crear">
                <button type="button">Crear Post</button>
            </a>
        </form>
        </div>
    </body>

</html>