@model CasoEstudio_CarlosRamirezReyes.Models.Usuarios

<div class="container">
    <h2>Editar Usuario</h2>
    <form asp-action="Editar">
        <input asp-for="UsuarioId" type="hidden" />

        <div class="form-group">
            <label asp-for="NombreUsuario">Nombre de Usuario</label>
            <input asp-for="NombreUsuario" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="CorreoElectronico">Email</label>
            <input asp-for="CorreoElectronico" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Contrasena">Contraseña</label>
            <input asp-for="Contrasena" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    </form>
</div>
