@model CasoEstudio_CarlosRamirezReyes.Models.Usuarios
<h2>Crear Usuario</h2>

<form asp-action="Crear" method="post">
  
    <div class="form-group">
        <label for="NombreUsuario">Nombre de Usuario</label>
        <input type="text" class="form-control" id="NombreUsuario" name="NombreUsuario" />
    </div>

    <div class="form-group">
        <label for="CorreoElectronico">CorreoElectronico</label>
        <input type="text" class="form-control" id="CorreoElectronico" name="CorreoElectronico" />
    </div>

    <div class="form-group">
        <label for="Contrasena">Contraseña</label>
        <input type="Contrasena" class="form-control" id="Contrasena" name="Contrasena" />
    </div>

    <div class="form-group">
        <label for="ConfirmContrasena">Confirmar Contraseña</label>
        <input type="Contrasena" class="form-control" id="ConfirmContrasena" name="ConfirmContrasena" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Guardar Usuario</button>
</form>
